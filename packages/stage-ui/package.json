{
  "name": "@stagewise/stage-ui",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:themes": "concurrently -n css,json,colors -c blue,magenta,green \"nodemon --watch src/palette.css --watch src/theme.css --watch src/code-block/syntax.css --ext css --exec 'pnpm generate:themes'\" \"nodemon --watch src/code-block/example-theme-dark.json --watch src/code-block/example-theme-light.json --ext json --exec 'pnpm generate:example-theme'\" \"nodemon --watch src/palette.css --watch src/theme.css --ext css --exec 'pnpm generate:theme-colors'\"",
    "lint": "biome lint . --max-warnings 0",
    "generate:themes": "tsx src/code-block/generate-code-block-theme-json.ts",
    "generate:example-theme": "tsx src/code-block/extract-vars-from-example-theme.ts",
    "generate:theme-colors": "tsx src/generate-theme-colors.ts"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "dependencies": {
    "@stagewise/tailwindcss-color-modifiers": "workspace:*",
    "@base-ui/react": "1.0.0",
    "@hookform/resolvers": "^5.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "0.554.0",
    "react-resizable-panels": "^2.1.9",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@storybook/react-vite": "^10.0.8",
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/vite": "^4.1.12",
    "@turbo/gen": "^2.5.3",
    "@types/culori": "^4.0.1",
    "@types/node": "22.15.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "concurrently": "^9.2.1",
    "culori": "^4.0.2",
    "esbuild": "^0.24.2",
    "glob": "^11.0.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite": "^7.1.3"
  },
  "main": "./dist/components/index.js",
  "types": "./dist/components/index.d.ts",
  "exports": {
    "./style.css": "./src/style.css",
    "./postcss.config": "./postcss.config.mjs",
    "./lib/*": "./src/lib/*.ts",
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts"
  },
  "version": "0.0.1"
}
