{
  "name": "@stagewise/tailwindcss-color-modifiers",
  "version": "0.0.0",
  "private": true,
  "description": "Tailwind plugin that adds channel-level color modifiers (OKLCH relative colors) to existing color utilities.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],

  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },

  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },

  "peerDependencies": {
    "tailwindcss": "^4.1.5"
  },

  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "postcss": "^8.5.3",
    "@tailwindcss/postcss": "^4.1.5"
  }
}
