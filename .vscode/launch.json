{
  "version": "0.2.0",
  "configurations": [
    {
      // Descriptive name for the debug dropdown
      "name": "Run Extension: vscode-extension",
      // Type for debugging VS Code extensions
      "type": "extensionHost",
      "request": "launch",
      // Crucial: Tells the Extension Host where to find your extension code
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vscode-extension"
        // Replace with the actual relative path from root to your extension package
      ],
      // Helps the debugger find your compiled JS and map back to TS source
      "outFiles": ["${workspaceFolder}/apps/vscode-extension/out/**/*.js"],
      // Run the build task defined above before launching
      "preLaunchTask": "Build Extension: vscode-extension" // Must match the "label" in tasks.json
    }
    // Add other launch configurations (e.g., for backend services) here
  ]
}
