{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"strict": true,   /* enable all strict type-checking options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@stagewise/extension-websocket-contract": ["../../packages/extension-websocket-contract/src"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
