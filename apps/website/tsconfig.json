{
  "extends": "../../packages/typescript-config/base.json",
  "references": [
    {
      "path": "../../packages/stage-ui"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "module": "ESNext"
  },
  "include": ["next-env.d.ts", "src", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", ".turbo", "out", "dist"]
}
