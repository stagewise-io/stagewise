{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/ui/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["src/ui", "forge.env.d.ts", "src/shared", ".storybook/**/*"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "node_modules",
    "dist",
    "coverage",
    "tmp",
    ".turbo"
  ]
}
