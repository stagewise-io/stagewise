{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["../src/ui/*"],
      "tmp/*": ["../tmp/*"]
    },
    "types": ["node", "vite/client"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "../src/ui/**/*.stories.tsx",
    "../src/ui/**/*.stories.ts",
    "decorators/**/*.ts",
    "decorators/**/*.tsx",
    "mocks/**/*.ts",
    "mocks/**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": ["node_modules", "dist", "coverage", "tmp", ".turbo"]
}
