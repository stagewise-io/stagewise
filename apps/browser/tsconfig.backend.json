{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/backend/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "types": ["node", "vite/client"],
    "skipLibCheck": true,
    "target": "ES2022",
    "strict": true
  },
  "include": ["src/backend", "forge.env.d.ts", "src/shared"],
  "exclude": ["node_modules", "dist", "coverage", "tmp", ".turbo"]
}
