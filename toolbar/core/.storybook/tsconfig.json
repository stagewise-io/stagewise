{
  "compilerOptions": {
    "baseUrl": "..",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "tmp/*": ["./tmp/*"]
    },
    "types": ["node", "vite/client"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "../src/**/*.stories.tsx",
    "../src/**/*.stories.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ]
}
